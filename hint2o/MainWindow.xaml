<Window x:Class="hint2o.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hint2o"
        mc:Ignorable="d"
        Icon="icon.ico"
        Title="hint2o" Height="220" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Height="120" Margin="0,25,0,0">
            <TextBlock Text="interval (minutes):" Margin="0,10,0,5"/>
            <TextBox x:Name="IntervalTextBox" Width="100"/>
            <Button Content="start" 
                    Width="100" Margin="0,10,0,0" 
                    Click="startTimerClick"/>
            <Button Content="stop" 
                    Width="100" Margin="0,10,0,0" 
                    Click="stopTimerClick"/>
        </StackPanel>
    </Grid>
</Window>
